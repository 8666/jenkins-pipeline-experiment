pipeline {
    agent {
        node {
            label 'linux'
        }
    }
    environment {
    
        FOO = "1.0.${BUILD_NUMBER}"
        BAR = "xyz"
        appName = "ConfigurationPortal" 
    }    
    options { 
        disableConcurrentBuilds() 
    }
    stages {
        stage('Fake Build') {
        when { not { anyOf { branch 'develop'; branch 'main' }}}
            steps {
                echo 'Something else, like random'
            }
        }
        stage('Fake Main Deploy') {
            when { branch 'main' }
            steps {
                  echo 'Repacking ${appName} UI...'
                  bat "echo .\\Scripts\\AWS\\Beanstalk\\Deploy\\BeantstalkDeploy.targets.msbuild /t:CreatePackage /p:AppName=Interop-${appName}-UI /p:BuildNumber=${VERSION}"
                  powershell "echo Rename-Item .\\BuildOutput\\DeployPackage.zip Interoperability-${appName}-UI.zip"
                  powershell "echo CreateNugetPackage.ps1 'Interoperabillity-${appName}' '..\\..\\..\\Interoperabillity-${appName}.zip' ${VERSION}"
   
                  
                  
                echo 'Deploying'
                echo "${BRANCH_NAME}"
                script {
                    FOO = "test2"
                    env.BAR = "bar2"
                }
            }
        }
        stage('Fake Develop Deploy') {
            when { branch 'develop' }
            steps {
                echo 'Deploying'
                echo "${BRANCH_NAME}"
                script {
                    FOO = "dev"
                    env.BAR = "dev"
                }
            }
        }
        stage('Final') {
            steps {
                echo "${FOO}"
                echo "${env.BAR}"
                sh 'mkdir SUBFOLDER -p'
                sh 'pwd'
            
            }
        }
        stage('Subfolder') {
            steps {
                dir(path: 'SUBFOLDER') {
                  echo 'Inside subf..'
                  sh 'pwd'
                }
                echo 'Outside subf..'
                sh 'pwd'
            
            }
        }
        stage('Subfolder2') {
            steps {
                echo 'Outside subf..'
                sh 'pwd'
            
            }
        }
        stage('Env Vars') {
        when {
           expression {
           echo "BRANCH_NAME ${BRANCH_NAME}"
           return ("${BRANCH_NAME}"=="main")
           }
           }
         
            steps {
              // bat('set')
            sh "printenv | sort"
            }
        }
        
        
        stage('Main branch only') {
            when {
            branch 'main' 
            }
            stages {
                stage('Main 1') {
                    steps {
                        echo 'Building'
                    }
                }
                stage('Main 2') {
                    steps {
                        echo 'Archiving Aritfacts'
                       /// archiveArtifacts artifacts: '/*.zip', fingerprint: true
                    }
                }
                stage('Main 3') {
                    steps {
                        echo 'Deploying'
                        timeout(time:5, unit:'MINUTES') {
                           input message: "Approve build?"
                        }
                    }
                }
            }

        }
    }
}
